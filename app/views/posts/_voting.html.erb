<ul class="votes">
  <% if current_user && (current_user !=  User.find(@post.user_id)) %>
    <% if !current_user.voted_for? @post %>
      <li><%= link_to image_tag('arrow_up.png', class: 'vote_up vote'), like_post_path(@post), method: :put, remote: true, id: "upvote" %></li>
      <li><%= @post.score %></li>
      <li><%= link_to image_tag('arrow_down.png', class: 'vote_down vote'), dislike_post_path(@post), method: :put, remote: true, id: "downvote" %></li>
    <% else %>
      <li><%= image_tag 'arrow_up.png', class: 'vote_up grayscale' %></li>
      <li><%= @post.score %></li>
      <li><%= image_tag 'arrow_down.png', class: 'vote_down grayscale' %></li>
    <% end %>
  <% elsif current_user && (current_user ==  User.find(@post.user_id)) %>
    <li><%= image_tag 'arrow_up.png', class: 'vote_up grayscale' %></li>
    <li><%= @post.score %></li>
    <li><%= image_tag 'arrow_down.png', class: 'vote_down grayscale' %></li>
  <% end %>
</ul>