if($("#reply_new_comment").length) {
  $('#reply_new_comment').before('<%= j render partial: 'comment', locals: {comment: @comment} %>');
  $('#comment_<%= @comment.id %>').css('margin-left','30px');
} else {
  $('.comments').append('<%= j render partial: 'comment', locals: {comment: @comment} %>');
}

$('#reply_new_comment').remove();
$('[id^="reply_"]').show();
$("#comment_body").val('');